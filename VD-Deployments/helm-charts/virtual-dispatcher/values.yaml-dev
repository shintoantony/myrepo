# Default values for virtual-dispatcher.
# This is a YAML-formatted file.
# Declare variables to be passed into your templates.


# Virtual Dispatcher Training Module
Training:
  replicaCount: 1
  image:
    repository: inmbzp7148.in.dst.ibm.com:5000/vd-training
    tag: icp-v1.1
    pullPolicy: IfNotPresent
  service:
    type: ClusterIP
    httpPort: 8080
    servicePort: 2025
    reportdbPort: 60001
  ingress:
    enabled: true
    path: /
    hosts:
      -  vd-training.innovatecloud.dst.ibm.com
    annotations:
      kubernetes.io/ingress.class: nginx
      # kubernetes.io/tls-acme: "true"
    tls:
      # Secrets must be manually created in the namespace.
      # - secretName: chart-example-tls
      #   hosts:
      #     - chart-example.local
  persistence:
    enabled: true
    accessMode: ReadWriteMany
    size: 5Gi
  resources:
    limits:
     cpu: 1
     memory: 2Gi

# Virtual Dispatcher Core Module
Core:
  replicaCount: 1
  image:
    repository: inmbzp7148.in.dst.ibm.com:5000/vd-core
    tag: icp-v1.1
    pullPolicy: IfNotPresent
  service:
    type: ClusterIP
    httpPort: 8080
    servicePort: 2026
    icdPort: 443
    reportdbPort: 60001
    icddbPort: 60000
  ingress:
    enabled: false
  persistence:
    enabled: true
    accessMode: ReadWriteMany
    size: 5Gi
  resources:
    limits:
     cpu: 1
     memory: 4Gi

